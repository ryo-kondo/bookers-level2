.col-xs-9
  %h2
    Books
  %table.table.table-hover.table-inverse
    %thead
      %tr
        %th
        %th
          Title
        %th
          Opinion
        %th{:colspan => 3}
    %tbody
      - @books.each do |book|
        %tr
          %td
            = link_to user_path(book.user) do
              = attachment_image_tag book.user, :profile_image, format: 'jpg', fallback: "no_image.jpg", size:'100x100'
          %td
            = link_to book.title, book_path(book.id), class: "book_#{book.id}"
          %td
            = book.body
