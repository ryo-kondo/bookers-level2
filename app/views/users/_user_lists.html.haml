.col-xs-9
  %h2
    Users
  %table.table
    %thead
      %tr
        %th
          image
        %th
          name
        %th{:colspan => 3}
    %tbody
      - @users.each do |user|
        %tr
          %td
            = attachment_image_tag user, :profile_image, format: 'jpg', fallback: "no_image.jpg", size:'100x100'
          %td
            = user.name
          %td
            = link_to 'Show', user_path(user), class: "user_#{user.id}"
